<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scavenge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.scavenge.ScavengeCreateGameFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout1"
                    android:layout_width="244dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rectangle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scavengeTitle">

                    <TextView
                        android:id="@+id/radiusText"
                        android:layout_width="53dp"
                        android:layout_height="16dp"
                        android:text="@string/radius_title"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toTopOf="@+id/radiusSeekBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <SeekBar
                        android:id="@+id/radiusSeekBar"
                        android:layout_width="206dp"
                        android:layout_height="19dp"
                        android:layout_marginTop="31dp"
                        android:max="40"
                        android:progress="20"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:hint="@string/radiusHint"
                        android:id="@+id/radiusTextInput"
                        android:layout_width="75dp"
                        android:layout_height="29dp"
                        android:layout_marginEnd="157dp"
                        android:ems="10"
                        android:inputType="number"
                        android:padding="3dp"
                        android:text="5.0"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toTopOf="@+id/radiusSeekBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:autofillHints="5.0"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        app:layout_constraintBottom_toBottomOf="@+id/radiusTextInput"
                        app:layout_constraintStart_toEndOf="@+id/radiusTextInput"
                        app:layout_constraintTop_toTopOf="@+id/radiusTextInput"
                        tools:ignore="HardcodedText" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="244dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rectangle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout1">

                    <TextView
                        android:id="@+id/chestsText"
                        android:layout_width="69dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="170dp"
                        android:text="@string/chest_title"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:hint="Chests"
                        android:id="@+id/chestsTextInput"
                        android:layout_width="75dp"
                        android:layout_height="29dp"
                        android:layout_marginEnd="157dp"
                        android:ems="10"
                        android:inputType="number"
                        android:padding="3dp"
                        android:text="5"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:autofillHints="5"
                        tools:ignore="HardcodedText" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="244dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rectangle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                    <TextView
                        android:id="@+id/coinsText"
                        android:layout_width="69dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="170dp"
                        android:text="@string/coin_title"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:hint="Coins"
                        android:id="@+id/coinsTextInput"
                        android:layout_width="75dp"
                        android:layout_height="29dp"
                        android:layout_marginEnd="157dp"
                        android:ems="10"
                        android:inputType="number"
                        android:padding="3dp"
                        android:text="5"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:autofillHints="5"
                        tools:ignore="HardcodedText" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout4"
                    android:layout_width="244dp"
                    android:layout_height="61dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rectangle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                    <Switch
                        android:id="@+id/radiusSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.918"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.529"
                        android:checked="true"/>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="150dp"
                        android:text="@string/share_radius"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/scavengeTitle"
                    android:layout_width="174dp"
                    android:layout_height="49dp"
                    android:layout_marginVertical="50dp"
                    android:text="@string/scavenge"
                    android:textColor="#000000"
                    android:textSize="34sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/startGameButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/start_game"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>